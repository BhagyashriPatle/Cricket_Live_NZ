<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/asset_5"
        android:layout_marginHorizontal="@dimen/_20ssp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_230ssp"
            android:layout_gravity="center"
            android:layout_marginVertical="@dimen/_50ssp"
            android:src="@drawable/asset_35" />

        <LinearLayout
            android:id="@+id/text_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_30ssp"
            android:layout_marginVertical="@dimen/_40ssp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="@string/bajfinance_ai_system_that_makes_benefit"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="@dimen/_28ssp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_20ssp"
                android:fontFamily="@font/inter_regular"
                android:text="@string/by_setting_up_new_feeds_you_will_always_be_aware_of_changes_in_the_stock_market_and_will_be_able_to_make_decision_quickly"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"
                android:textStyle="normal" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
