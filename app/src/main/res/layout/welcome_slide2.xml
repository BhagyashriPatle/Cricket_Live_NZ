<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/_20ssp"
        android:background="@drawable/asset_5"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_230ssp"
            android:layout_gravity="center"
            android:layout_marginVertical="@dimen/_50ssp"
            android:src="@drawable/asset_8" />

        <LinearLayout
            android:id="@+id/text_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_30ssp"
            android:layout_marginVertical="@dimen/_40ssp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="@string/top_most_strategies_to_reach_higher"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="@dimen/_25ssp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_20ssp"
                android:fontFamily="@font/inter_regular"
                android:text="@string/we_provide_very_easy_to_execute_strategies_which_are_formed_in_a_step_wise_format"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp"
                android:textStyle="normal" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
