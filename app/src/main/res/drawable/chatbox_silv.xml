<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
            android:fromDegrees="-45"
            android:pivotX="0%"
            android:pivotY="0%"
            android:toDegrees="0" >
            <shape android:shape="rectangle" >
                <corners android:topLeftRadius="@dimen/_10ssp"/>
                <gradient
                    android:endColor="@color/main_light_black_222223"
                    android:startColor="@color/main_purple_4f337a"
                    android:centerColor="@color/main_primary_28223b"
                    android:type="linear"/>
<!--                <stroke android:color="@color/bright_golden" android:width="@dimen/_1ssp"/>-->
<!--                    android:endColor="@color/blue_8008c3fa"-->
<!--                    android:startColor="@color/purple_gray"-->
<!--                    android:type="linear" />-->
<!--                <solid android:color="@color/colorPrimary" />-->
            </shape>
        </rotate>
    </item>
    <item android:left="12dp">
        <shape android:shape="rectangle" >
            <gradient
                android:endColor="@color/main_light_black_222223"
                android:startColor="@color/main_purple_4f337a"
                android:centerColor="@color/main_primary_28223b"
                android:type="linear"/>
<!--            <stroke android:color="@color/bright_golden" android:width="@dimen/_1ssp"/>-->

            <!--                android:endColor="@color/blue_8008c3fa"-->
<!--                android:startColor="@color/purple_gray"-->
<!--                android:type="linear" />-->
            <corners android:radius="@dimen/_4ssp"
                android:bottomLeftRadius="@dimen/_10ssp"
                android:bottomRightRadius="@dimen/_10ssp"
                android:topRightRadius="@dimen/_4ssp"
                android:topLeftRadius="@dimen/_2ssp"/>
        </shape>
    </item>
</layer-list>


