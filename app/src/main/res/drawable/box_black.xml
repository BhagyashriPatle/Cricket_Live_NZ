<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/_10ssp" />
                    <gradient android:centerColor="@color/blue_semidark_8004485c" android:centerX="70%" android:endColor="@color/blue_light_804cd6ff" android:startColor="@color/blue_light_804cd6ff" android:type="linear" />
                </shape>
            </item>
            <item android:bottom="@dimen/_5ssp" android:left="@dimen/_4ssp" android:right="@dimen/_4ssp" android:top="@dimen/_5ssp">
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
                    <corners android:radius="@dimen/_10ssp" />
                    <gradient android:angle="90" android:centerColor="@color/Transparent4" android:centerX="30%" android:endColor="@color/Transparent4" android:startColor="@color/blue_8008c3fa" android:type="linear" />

                    <stroke android:width="2.5dp" android:color="@color/purple_400" />
                </shape>
            </item>
            <item android:bottom="@dimen/_5ssp" android:left="@dimen/_4ssp" android:right="@dimen/_4ssp" android:top="@dimen/_5ssp">
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
                    <corners android:radius="@dimen/_10ssp" />
                    <gradient android:angle="90" android:centerColor="@color/Transparent4" android:centerX="70%" android:endColor="@color/blue_8008c3fa" android:startColor="@color/Transparent4" android:type="linear" />


                    <!--                    <size-->
                    <!--                        android:width="270dp"-->
                    <!--                        android:height="60dp"-->
                    <!--                        />-->
                </shape>
            </item>
            <item android:bottom="@dimen/_5ssp" android:left="@dimen/_4ssp" android:right="@dimen/_4ssp" android:top="@dimen/_5ssp">
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
                    <corners android:radius="@dimen/_10ssp" />
                    <gradient android:angle="360" android:centerColor="@color/blue_8008c3fa" android:centerX="5%" android:endColor="@color/Transparent4" android:gradientRadius="360" android:startColor="@color/Transparent4" android:type="sweep" />


                    <!--                    <size-->
                    <!--                        android:width="270dp"-->
                    <!--                        android:height="60dp"-->
                    <!--                        />-->
                </shape>
            </item>
            <item android:bottom="@dimen/_5ssp" android:left="@dimen/_4ssp" android:right="@dimen/_4ssp" android:top="@dimen/_5ssp">
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
                    <corners android:radius="@dimen/_10ssp" />

                    <gradient android:angle="360" android:centerColor="@color/Transparent4" android:centerX="95%" android:endColor="@color/blue_8008c3fa" android:gradientRadius="360" android:startColor="@color/blue_8008c3fa" android:type="sweep" />


                    <!--                    <size-->
                    <!--                        android:width="270dp"-->
                    <!--                        android:height="60dp"-->
                    <!--                        />-->
                </shape>
            </item>
        </layer-list>
    </item>

</selector>

