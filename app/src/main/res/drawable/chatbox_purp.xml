<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="100%"
            android:pivotY="0%"
            android:toDegrees="0" >
            <shape android:shape="rectangle" >
                <corners android:topRightRadius="@dimen/_10ssp"/>
                <gradient
                    android:endColor="@color/main_light_black_222223"
                    android:startColor="@color/main_purple_4f337a"
                    android:centerColor="@color/main_primary_28223b"
                    android:type="linear"/>
<!--                    android:endColor="@color/purple_gray"-->
<!--                    android:startColor="@color/blue_8008c3fa"-->
<!--                    android:type="linear" />-->
            </shape>
        </rotate>
    </item>
    <item android:right="12dp">
        <shape android:shape="rectangle" >
            <gradient
                android:endColor="@color/main_light_black_222223"
                android:startColor="@color/main_purple_4f337a"
                android:centerColor="@color/main_primary_28223b"
                android:type="linear"/>
<!--                android:endColor="@color/purple_gray"-->
<!--                android:startColor="@color/blue_8008c3fa"-->
<!--          />-->
            <corners android:radius="@dimen/_4ssp"
                android:bottomLeftRadius="@dimen/_10ssp"
                android:bottomRightRadius="@dimen/_10ssp"
                android:topLeftRadius="@dimen/_4ssp"
                android:topRightRadius="@dimen/_2ssp"/>
        </shape>
    </item>
</layer-list>


